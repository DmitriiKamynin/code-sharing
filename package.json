{
  "name": "code-sharing-monorepo",
  "version": "1.0.0",
  "description": "Монорепозиторий для приложения совместного редактирования кода",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=packages/backend",
    "dev:frontend": "npm run start --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "start": "npm run start:prod --workspace=packages/backend",
    "start:backend": "npm run start:prod --workspace=packages/backend",
    "start:frontend": "npm run start --workspace=packages/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/build",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
