{
  "name": "code-sharing-monorepo",
  "version": "1.0.0",
  "description": "Монорепозиторий для приложения совместного редактирования кода",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "npm run start:prod --workspace=packages/backend",
    "start:backend": "npm run start:prod --workspace=packages/backend",
    "start:frontend": "npm run start --workspace=packages/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/build",
    "install:all": "npm install"
  },
  "packageManager": "npm@10.9.3",
  "devDependencies": {
    "turbo": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
